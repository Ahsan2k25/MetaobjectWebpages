{% assign header_menu_color = section.settings.header_menu_color %}

<section class="transparent-pg-banner" 
         style="background: url({{ section.settings.main_banner_img_desktop | image_url }}) no-repeat;"
         data-image-mobile="{{ section.settings.main_banner_img_mobile | image_url }}" 
         data-image-desktop="{{ section.settings.main_banner_img_desktop | image_url }}">
    <div class="container">
        <h2 class="font-neue-light text-light">
            {{ section.settings.main_title | default: 'Default Title' }} 
            <br><span class="font-austin-italic">{{ section.settings.main_subtitle | default: 'Default Subtitle' }}</span>
        </h2>
        <p class="font-neue-roman text-light">{{ section.settings.main_txt | default: 'Default text for the banner' }}</p>
    </div>
</section>


<style type="text/css">
  .transparent-pg-banner{
        width: 100%;
        height: 800px;
        background-size: cover !important;
        background-position: center !important;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    .transparent-pg-banner h2 {
        font-size: 5.556vw;
        line-height: 4.653vw;
        letter-spacing: 0.65px;
        margin: 0px 0px 36px;
        color: rgba(249, 246, 243, 1);
    }
    .transparent-pg-banner h2 span{
        font-size: 5.976vw;
        line-height: 6.112vw; 
        display: block;
        padding-top: 10px;
    }
    .transparent-pg-banner p {
        margin: 0px;
        font-size: 16px;
        line-height: 26px;
        letter-spacing: 0.65px;
        width: 444px;
        max-width: 100%;
        color: rgba(249, 246, 243, 1);
    }
    .transparent-pg-banner .page-width {
        width: 100%;
    }

    #MainContent {
        padding-top: 0px;
    }

    .header-wrapper {
        background: transparent;
        position: absolute;
        left: 0;
        right: 0;
        width: 100%;
    }

    .header__heading-logo {
      filter: brightness(20.5);
    }


    .shopify-section-header-sticky .header-wrapper {
      background: #efebe6;
    }

    .shopify-section-header-sticky .header__menu-item span{
      color:#333;
    }

    .shopify-section-header-sticky .header__heading-logo {
      filter: brightness(0);
    }
    
    #MainContent {
      padding-top: 0px;
  }

  .header-wrapper {
    background: transparent;
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
}

    /*
    ** Responsive
    */
    @media (min-width: 1500px){
        .transparent-pg-banner h2{
            font-size: 80px;
            line-height: 67px;        
        }
        .transparent-pg-banner h2 span{
            font-size: 86px;
            line-height: 88px; 
        }
    }

    @media (min-width: 992px){
      .transparent-pg-banner .container {
          position: relative;
          top: -14px;
      }
      body.menu-light .header__heading-logo-wrapper svg {
          filter: brightness(0) invert(1);
      }
      body.menu-light .stickyHeader .header__heading-logo-wrapper svg{
        filter: none;
      }
      body.menu-light .mega-menu summary > a,
      body.menu-light .header__inline-menu.header__inline-menu--right > .list-menu.list-menu--inline li > .header__menu-item {
        color: #F9F6F3 !important;
      }

      body.menu-light a:-webkit-any-link,
      body.menu-light a:-webkit-any-link span{
        color: #F9F6F3;
      }

      .stickyHeader a:-webkit-any-link,
      .stickyHeader a:-webkit-any-link span,
      body.menu-light .mega-menu__content a:-webkit-any-link,
      body.menu-light .mega-menu__content a:-webkit-any-link span{
        color: #292521 !important;
      }

      .stickyHeader .mega-menu summary > a,
      body.menu-light .stickyHeader .mega-menu summary > a,
      .stickyHeader .header__inline-menu.header__inline-menu--right > .list-menu.list-menu--inline li > .header__menu-item,
      body.menu-light .stickyHeader .header__inline-menu.header__inline-menu--right > .list-menu.list-menu--inline li > .header__menu-item{
        color: #292521 !important;
      }
      
      body.menu-light .header__menu-item, body.menu-light .header__active-menu-item,
      body.menu-light a.products-menu-item{
        color: rgba(249, 246, 243, 1) !important;
      }

      .stickyHeader .header__heading-logo-wrapper svg{
        filter: none;
      }
      .stickyHeader .header__menu-item, 
      .stickyHeader .header__active-menu-item,
      .stickyHeader a.products-menu-item{
          color: rgba(41, 37, 33, 1);
      }
      body.menu-dark .header__menu-item, body.menu-dark .header__active-menu-item, body.menu-dark a.products-menu-item{
        color: rgba(41, 37, 33, 1) !important;
      }
      body.menu-dark .header__heading-logo-wrapper svg path{
        fill: #292521 !important;
      }

      body.menu-light main#MainContent a:-webkit-any-link,
      body.menu-light main#MainContent a:-webkit-any-link span{
        color: #292521;
      }

      body.menu-light main#MainContent a:-webkit-any-link:hover,
      body.menu-light main#MainContent a:-webkit-any-link:hover span{
        color: #F9F6F3;
      }
    }

    @media (max-width: 991px){
      body.menu-light account-icon a.login.btn-mobile{
        color: #f9f6f3 !important;
      }
      .stickyHeader account-icon a.login.btn-mobile,
      body.menu-light .stickyHeader account-icon a.login.btn-mobile{
        color: #292521 !important;
      }
      body.menu-light .header__heading-logo-wrapper svg path {
        fill: #F9F6F3;
      }
      .header__icon--menu .icon path {
        stroke: #F9F6F3;
      }
      .stickyHeader .header__heading-logo-wrapper svg path,
      body.menu-light .stickyHeader .header__heading-logo-wrapper svg path{
        fill: #292521 !important;
      }
      .stickyHeader .header__icon--menu .icon path,
      body.menu-light .stickyHeader .header__icon--menu .icon path{
        stroke: #292521;
      }
      
      body.menu-light header.header a#cart-icon-bubble{
        color: #F9F6F3;
      }
      body.menu-light .header__icon--menu svg:first-child path{
        stroke: #F9F6F3;
      }
      .stickyHeader .header a#cart-icon-bubble,
      body.menu-light .stickyHeader .header a#cart-icon-bubble{
        color: #292521;
      }
      .stickyHeader .header__icon--menu svg:first-child path,
      body.menu-light .stickyHeader .header__icon--menu svg:first-child path{
        stroke: #292521;
      }
      body.menu-dark .header__heading-logo-wrapper svg path {
        fill: #292521 !important;
      }
      body.menu-dark .header__heading-logo-wrapper svg{
        filter: none;
      }
    }

    @media (max-width: 767px){
        .transparent-pg-banner {
            height: 680px;
            background-size: cover;
            background-position: center;
        }
        .transparent-pg-banner h2{
            font-size: 60px;
            line-height: 64px;
            margin-bottom: 20px;
        }
        .transparent-pg-banner h2 span{
          font-size: 64px;
          line-height: 68px;
        }
    }
</style>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function() {
        const banner = document.querySelector(".transparent-pg-banner");
        const mobileImage = banner.getAttribute("data-image-mobile");
        const desktopImage = banner.getAttribute("data-image-desktop");

        // Toggle body class to reflect header menu color when this banner section exists
        (function setHeaderMenuColorClass() {
            try {
                var bodyEl = document.body;
                if (!bodyEl) return;
                bodyEl.classList.remove('menu-light', 'menu-dark');
                bodyEl.classList.add('menu-{{ header_menu_color | default: 'light' }}');
            } catch (e) {}
        })();

        function setMobileBackground() {
            if (window.innerWidth <= 767) { 
                banner.style.background = `url(${mobileImage})`;
            } else {
                banner.style.background = `url(${desktopImage})`;
            } 
        }

        setMobileBackground();
        window.addEventListener("resize", setMobileBackground);
    });
</script>

{% schema %}
{
  "name": "Main Banner Series",
  "settings": [
    {
      "type": "select",
      "id": "header_menu_color",
      "label": "Header menu color",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title"
    },
    {
      "type": "text",
      "id": "main_subtitle",
      "label": "Main Sub Title"
    },
    {
      "type": "textarea",
      "id": "main_txt",
      "label": "Main Text"
    },
    {
        "type": "image_picker",
        "id": "main_banner_img_desktop",
        "label": "Main Banner Desktop"
    },
    {
        "type": "image_picker",
        "id": "main_banner_img_mobile",
        "label": "Main Banner Mobile"
    }
  ],
  "presets": [
    {
      "name": "Main Banner Series",
      "category": "Custom"
    }
  ]
}
{% endschema %}